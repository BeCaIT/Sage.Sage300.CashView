@model Sage.CA.SBS.ERP.Sage300.SC.Web.Models.OptionsViewModel<Sage.CA.SBS.ERP.Sage300.SC.Models.Options>
@using OptionsResx = Sage.CA.SBS.ERP.Sage300.SC.Resources.Forms.OptionsResx

@using Sage.CA.SBS.ERP.Sage300.Common.Web.AreaConstants
@using Sage.CA.SBS.ERP.Sage300.Common.Resources
@using Sage.CA.SBS.ERP.Sage300.Common.Web.HtmlHelperExtension
@using Sage.CA.SBS.ERP.Sage300.Common.Models.Enums
@using AnnotationsResx = Sage.CA.SBS.ERP.Sage300.Common.Resources.AnnotationsResx

<div id="emailOptions" class="sublevel-1" ondragstart="return false" draggable="false">
    <div class="form-group">
        <div class="dropdown-group left">
            @Html.SageLabelFor(m => m.Data.EmailAlert)
            @Html.KoSageDropDownList("EmailAlert", new { options = "YesNo", @sagevalue = "Data.EmailAlert", optionsText = "'Text'", optionsValue = "'Value'" }, new { @class = "small" })
            @Html.ValidationMessageFor(m => m.Data.EmailAlert, null)
        </div>
        <div class="datepicker-group margin-left-base left">
            @Html.SageLabelFor(m => m.Data.EmailSnoozeUntil)
            @Html.KoSageTextBoxFor(m => m.Data.EmailSnoozeUntil, new { sageDatePicker = "Data.EmailSnoozeUntil" }, new { @class = "datepicker k-input valid small" })
            @Html.ValidationMessageFor(m => m.Data.EmailSnoozeUntil, null)
        </div>
    </div>
    <div class="wrapper-group clearfix">
        <!-- Email Settings -->
        <div class="panel">
            <div class="panel-header">
                <span class="panel-icon"></span>
                <h3>@OptionsResx.EmailSettings</h3>
            </div>
            <div class="panel-content">
                <div class="form-group">
                    <div class="input-group">
                        @Html.SageLabelFor(m => m.Data.EmailHost)
                        @Html.KoSageTextBoxFor(m => m.Data.EmailHost, new { sagevalue = "Data.EmailHost", valueUpdate = "'input'" }, new { @class = "medium" })
                        @Html.ValidationMessageFor(m => m.Data.EmailHost, null)
                    </div>
                    <div class="input-group">
                        @Html.SageLabelFor(m => m.Data.EmailPort)
                        @Html.KoSageTextBoxFor(m => m.Data.EmailPort, new { sagevalue = "Data.EmailPort", valueUpdate = "'input'" }, new { formatTextbox = "numeric", @class = "smaller numeric align-left" })
                        @Html.ValidationMessageFor(m => m.Data.EmailPort, null)
                    </div>
                    <div class="dropdown-group">
                        @Html.SageLabelFor(m => m.Data.EmailSSL)
                        @Html.KoSageDropDownList("EmailSSL", new { options = "YesNo", @sagevalue = "Data.EmailSSL", optionsText = "'Text'", optionsValue = "'Value'" }, new { @class = "small w120" })
                        @Html.ValidationMessageFor(m => m.Data.EmailSSL, null)
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.SageLabelFor(m => m.Data.EmailUser)
                        @Html.KoSageTextBoxFor(m => m.Data.EmailUser, new { sagevalue = "Data.EmailUser", valueUpdate = "'input'" }, new { @class = "medium" })
                        @Html.ValidationMessageFor(m => m.Data.EmailUser, null)
                    </div>
                    <div class="input-group">
                        @Html.SageLabelFor(m => m.Data.EmailPasswordString)
                        @Html.KoSagePasswordFor(m => m.Data.EmailPasswordString, new { sagevalue = "Data.EmailPasswordString", valueUpdate = "'input'" }, new { @class = "medium" })
                        @Html.ValidationMessageFor(m => m.Data.EmailPasswordString, null)
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.SageLabelFor(m => m.Data.EmailAddress)
                        @Html.KoSageTextBoxFor(m => m.Data.EmailAddress, new { sagevalue = "Data.EmailAddress", valueUpdate = "'input'" }, new { @class = "medium" })
                        @Html.ValidationMessageFor(m => m.Data.EmailAddress, null)
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        @Html.SageLabelFor(m => m.Data.EmailTo)
                        @Html.KoSageTextBoxFor(m => m.Data.EmailTo, new { sagevalue = "Data.EmailTo", valueUpdate = "'input'" }, new { @class = "larger" })
                        @Html.ValidationMessageFor(m => m.Data.EmailTo, null)
                    </div>
                </div>
            </div>
        </div>
        <!-- Email Test -->
        <div class="panel">
            <div class="panel-header">
                <span class="panel-icon"></span>
                <h3>@OptionsResx.EmailSendTest</h3>
            </div>
            <div class="panel-content">
                <div class="form-group">
                    <div class="input-group">
                        @Html.SageLabelFor(m => m.Data.EmailTest)
                        @Html.KoSageTextBoxFor(m => m.Data.EmailTest, new { sagevalue = "Data.EmailTest", valueUpdate = "'input'" }, new { @class = "medium" })
                        @Html.ValidationMessageFor(m => m.Data.EmailTest)
                    </div>
                    <div class="button-group">
                        @Html.KoSageButton("btnSendTestEmail", new { }, new { @id = "btnSendTestEmail", value = OptionsResx.EmailSendTest, @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
        <!-- Email Advisory -->
        <div class="panel">
            <div class="panel-header">
                <span class="panel-icon"></span>
                <h3>@OptionsResx.EmailAdvisory</h3>
            </div>
            <div class="panel-content">
                <div class="form-group">
                    @Html.SageLabel(OptionsResx.EmailAdvisoryText)
                </div>
            </div>
        </div>
        <!-- Email Offer -->
        <div class="form-group">
            <div class="ctrl-group">
                <div class="child block">
                    @Html.KoSageCheckBoxFor(m => m.Data.EmailOffer, new { sagechecked = "Data.EmailOffer" }, new { @class = "icon" })
                    <label class="checkBox-info optionpostingcheck" for="Data_EmailOffer">@Html.Raw(OptionsResx.EmailOffer)</label>
                </div>
            </div>
        </div>
    </div>
</div>